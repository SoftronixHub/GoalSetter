<%= form_for note, url: {action: "comment"}, html: { multipart: true}, remote: true, authenticity_token: true  do |f| %>
   <h3> Write a short note for task you have done....... </h3>
  <%= f.text_area :comment, size: "60x12" %>
  <%= f.file_field :attachment %>

  <input type="hidden" name="id" value="<%=@goal.id %>" />
  <%= f.submit "Add Note" %>
<% end %>