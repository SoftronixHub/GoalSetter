<p id="notice"><%= notice %></p>

<h1>List of my Goals</h1>
 <div class="table-responsive">
 <table class="table table-bordered" width="100%" id="dataTable" cellspacing="0">
  <thead>
    <tr>
      <th>Title</th>
       
      <th>Deadline</th>
      <th>Status</th>
      <th>Milestones<th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.title %></td>
         
        <td><%= goal.deadline %></td>
        <td><%= calculate_percentage(goal) %> %</td>
        <td><%= goal.milestones.count %> </td>
        <td><%= link_to 'Show', goal , class:"btn btn-info" %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Goal', new_goal_path, class: "btn btn-info" %>
