<p id="notice"><%= notice %></p>

<div class="row">
<div class="col-md-6">
<p>
  <strong>Title:</strong>
  <%= @goal.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @goal.description %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @goal.deadline %>
</p>
</div>
<div class="col-md-6" id="milestoneListing">
  <%= render partial: 'goals/milestones', locals: {milestones: @goal.milestones} %>
</div>
<div class="row">
<div class="col-md-6" id="noteListing">
  <%= render partial: 'goals/notes', locals: {notes: @goal.notes.order(created_at: :desc)} %>
</div>
<div class="col-md-6">
<%= render 'comment', note: @note, goal: @goal %>
</div>
</div>
</div>

<p>
<%= link_to 'Edit', edit_goal_path(@goal) %> |
<%= link_to 'Back', goals_path %> </p>
