<p id="notice"><%= notice %></p>

<div class="row">
<div class="col-md-6">
<h3> Goal Details </h3>
<p>
  <strong>Title:</strong>
  <%= @goal.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @goal.description %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @goal.deadline %>
</p>
</div>
<div class="col-md-6" id="milestoneListing">
  <%= render partial: 'goals/milestones', locals: {milestones: @goal.milestones} %>
</div>
<div class="row">
<div class="col-md-6" id="noteListing">
  <%= render partial: 'goals/notes', locals: {goal: @goal, notes: @goal.notes.order(created_at: :desc)} %>
</div>
<div class="col-md-6">
<%= render 'comment', note: @note, goal: @goal %>
</div>
</div>
</div>

<p>
<%= link_to 'Edit', edit_goal_path(@goal) , class:"btn btn-info" %> |
<%= link_to 'Destroy', @goal, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-info" %> |
<%= link_to 'Back', goals_path, class:"btn btn-info" %> </p>
